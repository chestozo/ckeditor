.mail-Editor
  min-width: 530px

  &-editable-vhidden
    visibility: hidden

  // чинит растягивание contenteditable блока в FF и IE из-за flex
  // в FF дополнительно требуется фикс тут src/hubs/common/Global/mail-Global.styl
  &-Container
    width: 100%

  // mail-Editor-Bottom
  &-Bottom
    display: flex
    flex-direction: column

    &-Buttons
      box-shadow: inset 0 0 0 0 #fff, inset 0 0 0 0 #fff, inset 0 0px 0 0 #fff, inset 0 1px 0 rgba(#000, 0.1)
      padding-top: 10px
      margin-top: 3px

  & .mail-SignatureChooser
    left: -20px

  & .cke_maximized
    & .mail-SignatureChooser
      left: 0px
      width: 7px

.mail-Editor-Font,
.mail-Editor-FontSize,
.mail-Editor-GroupButtons
  &_selected
    background: rgba(255,193,0,0.5) !important

  &_disabled
    opacity: 0.2
    pointer-events: none

  & ._nb-popup-link
    line-height: 16px
    font: $islands_text_s/1.5 Arial, sans-serif

.mail-Editor-Font,
.mail-Editor-FontSize
  overflow-y: auto

.mail-Editor-GroupButtons
  & ._nb-popup-link
    display: flex
    align-items: center

    & > .svgicon
      margin: -2px 6px 0 -6px

.mail-Editor-Color
  &-Item
    float: left
    display: block
    width: 15px
    height: 15px
    margin: 1px
    cursor: pointer
    box-shadow: inset 0px 0px 0px 1px rgba(#000,0.2)

  & ._nb-popup-content
    padding: 8px
    overflow: auto

    &:after,
    &:before
      display: none

.mail-ComposeSidebar-Popup
  & .mail-Compose
    &.cke_pastefile_placeholder:before
      margin: 0 0 -10px 0

.cke_editor_maximized
  & .ui-dialog
    position: fixed
