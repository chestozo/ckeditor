.cke_path
  float: left
  margin: -2px 0 2px

a.cke_path_item,
span.cke_path_empty
  display: inline-block
  float: left
  padding: 3px 4px
  margin-right: 2px
  cursor: default
  text-decoration: none
  outline: 0
  border: 0
  color: #4c4c4c
  text-shadow: 0 1px 0 #fff
  font-weight: bold
  font-size: 11px

.cke_path,
.cke_path_item,
.cke_path_empty
  .cke_rtl &
    float: right

  .cke_hc &
    border: 2px solid
    padding: 1px 2px

a.cke_path_item
  &:hover,
  &:focus,
  &:active
    background-color: #bfbfbf
    color: #333
    text-shadow: 0 1px 0 rgba(#fff,.5)
    border-radius: 2px
    box-shadow: 0 0 4px rgba(#000,.5) inset, 0 1px 0 rgba(#fff,.5)
